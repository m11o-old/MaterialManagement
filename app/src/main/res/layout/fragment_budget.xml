<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.macuser.havi3.Budget"
    android:orientation="vertical">

    <!-- TODO: Update blank fragment layout -->

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:gravity="center"
        android:background="@drawable/simple_frame"
        android:layout_gravity="center">

        <TextView
            android:text="予算"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/textView18"
            android:textSize="40sp"
            android:layout_marginRight="20dp"
            android:textColor="@color/colorPrimary"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="10dp" />

        <TextView
            android:text="10000"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="40sp"
            android:layout_marginRight="10dp"
            android:id="@+id/BudgetShowTextView" />

        <TextView
            android:text="円"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/textView19"
            android:textSize="30sp"
            android:layout_marginRight="20dp" />
    </LinearLayout>



    <ListView
        android:elevation="0dp"
        android:layout_marginTop="20dp"
        android:layout_width="350dp"
        android:layout_gravity="center_horizontal"
        android:id="@+id/BudgetListView"
        android:background="#FFFFFF"
        android:layout_height="310dp" />


    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_horizontal">

        <Button
            android:text="今月の\n予算登録"
            android:layout_marginTop="20dp"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="15dp"
            android:textSize="17sp"
            android:background="@android:drawable/btn_default"
            android:textColor="#000000"
            android:id="@+id/BudgetButton"
            android:layout_width="120dp"
            android:layout_height="80dp"
            android:layout_marginBottom="10dp" />

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="wrap_content"
            android:layout_height="match_parent">

            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:gravity="right">

                <TextView
                    android:text="支出"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/textView22"
                    android:textSize="20sp"
                    android:layout_marginRight="5dp" />

                <TextView
                    android:text="-3000"
                    android:layout_height="wrap_content"
                    android:textSize="25sp"
                    android:layout_marginRight="2dp"
                    android:textColor="@android:color/holo_red_light"
                    android:id="@+id/UseTextView"
                    android:layout_width="80dp"
                    android:gravity="center" />

                <TextView
                    android:text="円"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/textView20"
                    android:textSize="18sp"
                    android:layout_marginRight="30dp" />
            </LinearLayout>

            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="15dp"
                android:gravity="right">

                <TextView
                    android:text="残高"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/textView25"
                    android:textSize="20sp"
                    android:layout_marginRight="5dp" />

                <TextView
                    android:text="2000"
                    android:layout_width="80dp"
                    android:layout_height="wrap_content"
                    android:textSize="25sp"
                    android:layout_marginRight="2dp"
                    android:id="@+id/SurplusShowTextView"
                    android:gravity="center" />

                <TextView
                    android:text="円"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/textView23"
                    android:textSize="18sp"
                    android:layout_marginRight="30dp" />
            </LinearLayout>

        </LinearLayout>

    </LinearLayout>

</LinearLayout>
